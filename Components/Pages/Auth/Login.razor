@page "/"
@using go_han_fe.Models.ViewModels
@using go_han_fe.Services.Api
@using go_han_fe.Services.State
@rendermode InteractiveServer
@layout Layout.EmptyLayout

@inject AuthApiService AuthApi
@inject AuthState AuthState
@inject NavigationManager NavManager

<div class="min-h-screen flex flex-col items-center justify-center bg-sentra-slate px-4 py-12">
    <div class="max-w-md w-full bg-white rounded-2xl shadow-xl p-10 border border-slate-100">

        <div class="text-center mb-10">
            <h3 class="text-2xl font-extrabold text-sentra-navy">SentraKerja</h3>
            <p class="text-slate-500 mt-2">Selamat datang kembali!</p>
        </div>

        <EditForm Model="loginModel" OnValidSubmit="HandleLogin" class="space-y-6">
            <DataAnnotationsValidator />

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="bg-red-100 text-red-700 px-4 py-3 rounded-xl text-sm font-medium">
                    @errorMessage
                </div>
            }

            <div>
                <label class="block text-sm font-semibold text-slate-700 mb-2">Email</label>
                <InputText @bind-Value="loginModel.Email" class="block w-full px-4 py-3 bg-slate-50 border rounded-xl"
                    placeholder="email@gmail.com" />
            </div>

            <div>
                <label class="block text-sm font-semibold text-slate-700 mb-2">Password</label>
                <InputText @bind-Value="loginModel.Password" type="password"
                    class="block w-full px-4 py-3 bg-slate-50 border rounded-xl" placeholder="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢" />
            </div>

            <button type="submit" disabled="@isLoading"
                class="w-full bg-sentra-blue text-white font-bold py-3.5 rounded-xl disabled:opacity-60">
                @(isLoading ? "Memproses..." : "Login")
            </button>
        </EditForm>

        <div class="mt-6 text-center text-sm">
            Belum punya akun?
            <a href="/register" class="text-sentra-blue font-bold">Daftar</a>
        </div>
    </div>
</div>

@code {
    private LoginViewModel loginModel = new();
    private string? errorMessage;
    private bool isLoading;

    private async Task HandleLogin()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            var response = await AuthApi.LoginAsync(
            loginModel.Email,
            loginModel.Password
            );

            if (response == null)
            {
                errorMessage = "Server tidak merespon";
                return;
            }

            if (!response.Success)
            {
                // ðŸ”¥ MESSAGE ASLI DARI BACKEND
                errorMessage = response.Message;
                return;
            }

            var token = response.Data!.Token;

            var user = await AuthApi.MeAsync(token);
            if (user == null)
            {
                errorMessage = "Gagal mengambil data user";
                return;
            }

            AuthState.SetAuth(token, user);
            NavManager.NavigateTo("/dashboard", true);
        }
        catch
        {
            errorMessage = "Terjadi kesalahan pada server";
        }
        finally
        {
            isLoading = false;
        }
    }
}