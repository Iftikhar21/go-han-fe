@page "/login"
@using go_han_fe.Models.ViewModels
@using go_han_fe.Services.Api
@using go_han_fe.Services.State
@rendermode InteractiveServer
@layout Layout.EmptyLayout

@inject AuthApiService AuthApi
@inject AuthState AuthState
@inject NavigationManager NavManager

<div class="min-h-screen flex items-center justify-center bg-gray-100 p-4">
    <div class="flex bg-white rounded-3xl shadow-2xl overflow-hidden max-w-5xl w-full">
        <!-- Left Panel - Branding -->
        <div
            class="hidden lg:flex lg:w-1/2 bg-gradient-to-br from-[#2d4a6f] via-[#4168a8] to-[#5b8fd8] p-12 flex-col justify-between">
            <div class="text-center">
                <h1 class="text-white text-5xl font-bold mb-3">Go-Han</h1>
                <p class="text-blue-100 text-lg font-light">Project Management Platform</p>
            </div>

            <div class="flex justify-center items-center flex-1 py-8">
                <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-3 shadow-2xl">
                    <img src="images/login_images.svg" alt="Team collaboration" class="rounded-xl w-full h-auto" />
                </div>
            </div>

            <div class="space-y-4 text-center">
                <p class="text-white font-light text-base">Streamline your workflow</p>
                <p class="text-white font-light text-base">Collaborate with transparency</p>
                <p class="text-white font-light text-base">Track progress in real-time</p>
            </div>
        </div>

        <!-- Right Panel - Sign In Form -->
        <div class="w-full lg:w-1/2 flex items-center justify-center p-12">
            <div class="max-w-md w-full">
                <div class="mb-10">
                    <h2 class="text-3xl font-bold text-gray-900 mb-3">Welcome Back</h2>
                    <p class="text-gray-500 text-sm">Sign in to continue to your dashboard</p>
                </div>

                <EditForm Model="loginModel" OnValidSubmit="HandleLogin" class="space-y-6">
                    <DataAnnotationsValidator />

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg text-sm">
                            @errorMessage
                        </div>
                    }

                    <!-- Email Input -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Email or Username</label>
                        <div class="relative">
                            <span class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400">
                                <i class="bi bi-person-fill w-5 h-5"></i>
                            </span>
                            <InputText @bind-Value="loginModel.Email"
                                class="block w-full pl-12 pr-4 py-3.5 border border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition bg-gray-50"
                                placeholder="your.email@company.com" />
                        </div>
                    </div>

                    <!-- Password Input -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Password</label>
                        <div class="relative">
                            <span class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400">
                                <i class="bi bi-lock w-5 h-5"></i>
                            </span>

                            <InputText @bind-Value="loginModel.Password" type="@PasswordInputType" class="block w-full pl-12 pr-12 py-3.5 border border-gray-200 rounded-lg
                   focus:ring-2 focus:ring-blue-500 focus:border-transparent
                   outline-none transition bg-gray-50" placeholder="Enter your password" />

                            <button type="button" @onclick="TogglePasswordVisibility" class="absolute right-4 top-1/2 -translate-y-1/2
                   text-gray-400 hover:text-gray-600">
                                <i class="bi @(showPassword ? "bi-eye-slash" : "bi-eye") w-5 h-5"></i>
                            </button>
                        </div>
                    </div>

                    <!-- Sign In Button -->
                    <button type="submit" disabled="@isLoading"
                        class="w-full bg-[#4169e1] hover:bg-[#3557c7] text-white font-medium py-3.5 rounded-lg transition duration-200 disabled:opacity-60 disabled:cursor-not-allowed flex items-center justify-center gap-2">
                        @if (isLoading)
                        {
                            <i class="bi bi-arrow-clockwise animate-spin w-5 h-5"></i>
                            <span>Signing in...</span>
                        }
                        else
                        {
                            <span>Sign In</span>
                            <i class="bi bi-arrow-right w-5 h-5"></i>
                        }
                    </button>
                </EditForm>

                <!-- Sign Up Link -->
                <div class="mt-6 text-center text-sm text-gray-600">
                    Don't have an account?
                    <a href="/register" class="text-blue-600 hover:text-blue-700 font-semibold ml-1">Sign Up</a>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private LoginViewModel loginModel = new();
    private string? errorMessage;
    private bool isLoading;

    private bool showPassword = false;
    private string PasswordInputType => showPassword ? "text" : "password";
    private string PasswordIcon => showPassword ? "eye-slash" : "eye";

    private void TogglePasswordVisibility()
    {
        showPassword = !showPassword;
    }

    private async Task HandleLogin()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            var response = await AuthApi.LoginAsync(
            loginModel.Email,
            loginModel.Password
            );

            if (response == null)
            {
                errorMessage = "Server tidak merespon";
                return;
            }

            if (!response.Success)
            {
                errorMessage = response.Message;
                return;
            }

            var token = response.Data!.Token;

            var user = await AuthApi.MeAsync(token);
            if (user == null)
            {
                errorMessage = "Gagal mengambil data user";
                return;
            }

            AuthState.SetAuth(token, user);
            NavManager.NavigateTo("/dashboard", true);
        }
        catch
        {
            errorMessage = "Terjadi kesalahan pada server";
        }
        finally
        {
            isLoading = false;
        }
    }
}