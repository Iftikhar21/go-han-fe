@inject NavigationManager Navigation

<div
    class="@($"fixed top-0 left-0 h-screen w-80 bg-gradient-to-b from-[#004AAD] to-[#004AAD] backdrop-blur-xl bg-opacity-90 text-white z-40 transform transition-transform duration-300 flex flex-col border-r border-white/10 shadow-2xl {(_sidebarOpen ? "translate-x-0" : "-translate-x-full lg:translate-x-0")}")">
    <!-- Logo Section -->
    <div class="p-6 border-b border-white/10 flex-shrink-0 bg-white/5 backdrop-blur-md">
        <div class="w-40 h-40 mx-auto flex flex-col items-center justify-center">
            <!-- Ganti dengan logo Anda -->
            <div class="w-24 h-24 bg-white/20 rounded-full flex items-center justify-center opacity-90">
                <span class="text-2xl font-bold">SK</span>
            </div>
            <div class="mt-4 text-center">
                <h2 class="text-lg font-bold">Admin Panel</h2>
                <p class="text-xs text-white/70">SentraKerja</p>
            </div>
        </div>
    </div>

    <!-- Navigation -->
    <div class="flex-1 overflow-hidden flex flex-col">
        <nav class="p-4 flex-1 overflow-y-auto">
            <ul class="space-y-2">
                <!-- Dashboard -->
                <li>
                    <NavLink href="/admin/dashboard"
                        class="flex items-center gap-3 px-4 py-3 rounded-lg transition-all duration-300"
                        active-class="bg-white/20 text-white shadow-lg border-r-4 border-white">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6">
                            </path>
                        </svg>
                        <span class="font-medium text-sm">Dashboard</span>
                    </NavLink>
                </li>

                <!-- Konten Website Dropdown -->
                <li>
                    <div class="relative">
                        <button @onclick='() => ToggleDropdown("konten")'
                            class="flex items-center justify-between w-full px-4 py-3 rounded-lg transition-all duration-300 hover:bg-white/10 text-white/80 hover:text-white">
                            <div class="flex items-center gap-3">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M4 7v10c0 2 1 3 3 3h10c2 0 3-1 3-3V7c0-2-1-3-3-3H7c-2 0-3 1-3 3z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M9 5h6v2H9zM5 9h14M5 15h14M5 12h14"></path>
                                </svg>
                                <span class="font-medium text-sm">Konten Website</span>
                            </div>
                            <svg class="w-4 h-4 transition-transform duration-300 @(_openDropdowns.Contains("konten") ? "rotate-180" : "")"
                                fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M19 9l-7 7-7-7"></path>
                            </svg>
                        </button>

                        @if (_openDropdowns.Contains("konten"))
                        {
                            <div class="ml-4 mt-2 space-y-1">
                                <NavLink href="/admin/news"
                                    class="block px-4 py-2.5 rounded-lg text-sm transition-all duration-300 hover:bg-white/10 text-white/70 hover:text-white"
                                    active-class="bg-[#003A8C] text-white shadow-md border-l-4 border-white">
                                    Berita
                                </NavLink>
                                <NavLink href="/admin/program"
                                    class="block px-4 py-2.5 rounded-lg text-sm transition-all duration-300 hover:bg-white/10 text-white/70 hover:text-white"
                                    active-class="bg-[#003A8C] text-white shadow-md border-l-4 border-white">
                                    Program
                                </NavLink>
                                <NavLink href="/admin/sejarah"
                                    class="block px-4 py-2.5 rounded-lg text-sm transition-all duration-300 hover:bg-white/10 text-white/70 hover:text-white"
                                    active-class="bg-[#003A8C] text-white shadow-md border-l-4 border-white">
                                    Sejarah
                                </NavLink>
                                <NavLink href="/admin/visi-misi"
                                    class="block px-4 py-2.5 rounded-lg text-sm transition-all duration-300 hover:bg-white/10 text-white/70 hover:text-white"
                                    active-class="bg-[#003A8C] text-white shadow-md border-l-4 border-white">
                                    Visi & Misi
                                </NavLink>
                            </div>
                        }
                    </div>
                </li>

                <!-- Kontak -->
                <li>
                    <NavLink href="/admin/contacts"
                        class="flex items-center gap-3 px-4 py-3 rounded-lg transition-all duration-300 hover:bg-white/10 text-white/80 hover:text-white"
                        active-class="bg-white/20 text-white shadow-lg border-r-4 border-white">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z">
                            </path>
                        </svg>
                        <span class="font-medium text-sm">Kontak</span>
                    </NavLink>
                </li>

                <!-- Pendaftaran -->
                <li>
                    <NavLink href="/admin/registrations"
                        class="flex items-center gap-3 px-4 py-3 rounded-lg transition-all duration-300 hover:bg-white/10 text-white/80 hover:text-white"
                        active-class="bg-white/20 text-white shadow-lg border-r-4 border-white">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z">
                            </path>
                        </svg>
                        <span class="font-medium text-sm">Pendaftaran</span>
                    </NavLink>
                </li>

                <!-- Manajemen Pengguna Dropdown -->
                <li>
                    <div class="relative">
                        <button @onclick='() => ToggleDropdown("users")'
                            class="flex items-center justify-between w-full px-4 py-3 rounded-lg transition-all duration-300 hover:bg-white/10 text-white/80 hover:text-white">
                            <div class="flex items-center gap-3">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5 0H21">
                                    </path>
                                </svg>
                                <span class="font-medium text-sm">Manajemen Pengguna</span>
                            </div>
                            <svg class="w-4 h-4 transition-transform duration-300 @(_openDropdowns.Contains("users") ? "rotate-180" : "")"
                                fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M19 9l-7 7-7-7"></path>
                            </svg>
                        </button>

                        @if (_openDropdowns.Contains("users"))
                        {
                            <div class="ml-4 mt-2 space-y-1">
                                <NavLink href="/admin/kelola-pengguna"
                                    class="block px-4 py-2.5 rounded-lg text-sm transition-all duration-300 hover:bg-white/10 text-white/70 hover:text-white"
                                    active-class="bg-[#003A8C] text-white shadow-md border-l-4 border-white">
                                    Semua Pengguna
                                </NavLink>
                                <NavLink href="/admin/kelola-admin"
                                    class="block px-4 py-2.5 rounded-lg text-sm transition-all duration-300 hover:bg-white/10 text-white/70 hover:text-white"
                                    active-class="bg-[#003A8C] text-white shadow-md border-l-4 border-white">
                                    Admin
                                </NavLink>
                                <NavLink href="/admin/kelola-user"
                                    class="block px-4 py-2.5 rounded-lg text-sm transition-all duration-300 hover:bg-white/10 text-white/70 hover:text-white"
                                    active-class="bg-[#003A8C] text-white shadow-md border-l-4 border-white">
                                    User
                                </NavLink>
                            </div>
                        }
                    </div>
                </li>
            </ul>
        </nav>

        <!-- User Info & Logout -->
        <div class="p-4 border-t border-white/10 bg-white/5 backdrop-blur-md">
            <button @onclick="NavigateToProfile"
                class="flex items-center gap-3 w-full px-2 py-2 text-white/90 hover:bg-white/10 rounded-lg transition-colors duration-200 mb-4">
                <div class="w-10 h-10 bg-white/20 rounded-full flex items-center justify-center flex-shrink-0">
                    <span class="text-white font-medium text-sm">A</span>
                </div>
                <div class="flex-1 min-w-0 text-left">
                    <p class="text-sm font-medium truncate">Admin Sentra</p>
                    <p class="text-xs text-white/70 truncate">Administrator</p>
                </div>
            </button>

            <button @onclick="ShowLogoutModal"
                class="flex items-center justify-center gap-2 w-full px-4 py-2.5 bg-white/10 hover:bg-white/20 text-white rounded-lg transition-colors duration-200">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1">
                    </path>
                </svg>
                <span class="text-sm font-medium">Keluar</span>
            </button>

            <!-- Home Button untuk mobile -->
            <button @onclick="GoToHome"
                class="flex items-center justify-center gap-2 w-full px-4 py-2.5 mt-3 bg-white/10 hover:bg-white/20 text-white rounded-lg transition-colors duration-200 lg:hidden">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6">
                    </path>
                </svg>
                <span class="text-sm font-medium">Ke Beranda</span>
            </button>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public bool _sidebarOpen { get; set; }

    [Parameter]
    public EventCallback<bool> _sidebarOpenChanged { get; set; }

    private List<string> _openDropdowns = new List<string>();

    private void ToggleDropdown(string dropdownName)
    {
        if (_openDropdowns.Contains(dropdownName))
        {
            _openDropdowns.Remove(dropdownName);
        }
        else
        {
            _openDropdowns.Add(dropdownName);
        }
    }

    private void NavigateToProfile()
    {
        Navigation.NavigateTo("/admin/profil");
    }

    private void ShowLogoutModal()
    {
        // Implement logout modal logic nanti
        Console.WriteLine("Logout clicked");
    }

    private void GoToHome()
    {
        Navigation.NavigateTo("/");
    }
}